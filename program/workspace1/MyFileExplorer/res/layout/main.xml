<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@drawable/theme_2"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:text="文件管理器"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/bg_header"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_header"
        >
        <ImageButton 
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_copy"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            />
        
        <ImageButton
            android:id="@+id/paste" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_paste"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/multi_choose" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_select"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/show_type" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_mode_icon"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"	
        android:layout_height="wrap_content"
        android:background="@drawable/list_pressed_holo"
        android:orientation="vertical"
         >
	    <TextView 
	        android:id="@+id/pathInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="/SDCard"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:textColor="#ffffff"
	        android:paddingLeft="3dp"
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:focusable="true"
	        android:focusableInTouchMode="true"
	        android:marqueeRepeatLimit="marquee_forever"
	        />
    </LinearLayout>
    <ListView 
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        />
</LinearLayout>
