<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:layout_toRightOf="@+id/goods_img"
            android:text="1.5米不锈钢防爆花洒软管 淋浴软管"
            android:textColor="@color/gray_30"
            android:textSize="15sp" />

        <TextView

            android:id="@+id/goods_norm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goods_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/goods_img"
            android:text="规格：DN15"
            android:textColor="@color/colorTextG3" />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goods_norm"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/goods_img"
            android:text="¥189"
            android:textColor="@color/tx_1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/goods_norm"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:text="x1"
            android:textColor="@color/gray_30"
            android:textSize="16sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_order_state_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_bg"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/order_state_btn"
            android:layout_width="74dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/border_gray"
            android:gravity="center"
            android:text="申请退款"
            android:textColor="@color/tx_4" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>












</LinearLayout>