<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTittle"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="确认完工内容"
            android:textColor="@color/tx_l"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgCloce"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:padding="8dp"
            android:src="@drawable/cha"
            app:layout_constraintBottom_toBottomOf="@+id/tvTittle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTittle" />

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTittle" />

        <TextView
            android:id="@+id/tvRealContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="实际服务内容："
            android:textColor="@color/gray_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <EditText
            android:id="@+id/etRealContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:hint="实际服务内容"
            android:maxLines="1"
            android:textColor="@color/gray_30"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvRealContent"
            app:layout_constraintLeft_toLeftOf="@+id/tvRealContent"
            app:layout_constraintRight_toRightOf="@+id/tvRealContent"
            app:layout_constraintTop_toTopOf="@+id/tvRealContent" />

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRealContent" />


        <TextView
            android:id="@+id/tvRealArea"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="施工面积：15平方米"
            android:textColor="@color/gray_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2" />
        <View
            android:id="@+id/line8"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRealArea" />
        <TextView
            android:id="@+id/tvUnitPrice"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="单价：125元"
            android:textColor="@color/gray_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line8" />

        <View
            android:id="@+id/line9"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUnitPrice" />

        <TextView
            android:id="@+id/tvOtherContent"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:paddingLeft="16dp"
            android:text="其他服务内容："
            android:textColor="@color/gray_30"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line9" />

        <EditText
            android:id="@+id/etOtherContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="120dp"
            android:background="@null"
            android:hint="其他服务内容"
            android:maxLines="1"
            android:textColor="@color/gray_30"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/tvOtherContent"
            app:layout_constraintRight_toRightOf="@+id/tvOtherContent"
            app:layout_constraintBottom_toTopOf="@+id/tvOtherPrice"
            app:layout_constraintTop_toBottomOf="@+id/line9" />

        <View
            android:id="@+id/line3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOtherContent" />

        <TextView
            android:id="@+id/tvOtherPrice"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="其他服务价格（元）："
            android:textColor="@color/gray_30"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line3" />


        <EditText
            android:id="@+id/etOtherPrice"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:hint="其他服务价格（元）"
            android:maxLines="1"
            android:textColor="@color/gray_30"
            android:textSize="14sp"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/tvOtherPrice"
            app:layout_constraintLeft_toLeftOf="@+id/tvOtherPrice"
            app:layout_constraintRight_toRightOf="@+id/tvOtherPrice"
            app:layout_constraintTop_toTopOf="@+id/tvOtherPrice" />

        <View
            android:id="@+id/line4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOtherPrice" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="总费用（元）："
            android:textColor="@color/gray_30"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line4" />


        <EditText
            android:id="@+id/etTotalPrice"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="80dp"
            android:background="@color/white"
            android:hint="总费用（元）"
            android:inputType="number"
            android:maxLines="1"
            android:visibility="gone"
            android:textColor="@color/gray_30"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTotalPrice"
            app:layout_constraintLeft_toLeftOf="@+id/tvTotalPrice"
            app:layout_constraintRight_toRightOf="@+id/tvTotalPrice"
            app:layout_constraintTop_toTopOf="@+id/tvTotalPrice" />

        <View
            android:id="@+id/line5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalPrice" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="上传完工图片（必传）"
            android:textColor="@color/gray_30"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line5" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*最多上传3张图片*"
            android:textColor="@color/tx_1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintLeft_toRightOf="@+id/textView6" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <View
            android:id="@+id/line6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycleView" />


        <EditText
            android:id="@+id/etNote"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_shengqingtuidan"
            android:gravity="top"
            android:hint="在这里添加您需要备注的信息"
            android:maxLines="3"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/gray_30"
            android:textColorHint="@color/gray_200"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line6" />

        <TextView
            android:id="@+id/tvCommit"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="确定提交"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNote" />


    </android.support.constraint.ConstraintLayout>
</RelativeLayout>