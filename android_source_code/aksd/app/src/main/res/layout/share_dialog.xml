<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_80"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="分享" />

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#33a7adb4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_share_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/fenxiangweixin"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/y24" />

            <TextView
                android:id="@+id/btn_share_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/fenxiangpengyouquan"
                android:gravity="center"
                android:onClick=""
                android:textColor="@color/white"
                android:textSize="@dimen/y24" />

            <TextView
                android:id="@+id/btn_share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/fenxiangqq"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/y24" />
            <TextView

                android:id="@+id/btn_share_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/fenxiangqzone"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/y24" />
            <TextView
                android:id="@+id/btn_share_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/fenxianglianjie"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/y24" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:visibility="gone"
            android:orientation="horizontal">





            <TextView
                android:id="@+id/btn_share_wb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@drawable/fenxiangweibo"
                android:gravity="center"
                android:text="微博"
                android:textColor="@color/white"
                android:textSize="@dimen/y24"
                android:visibility="gone"

                />




            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>