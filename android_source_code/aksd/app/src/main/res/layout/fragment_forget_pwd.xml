<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical">

    <include layout="@layout/top_back_title_bar" />


    <EditText
        android:id="@+id/registered_number"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/setbar_white"
        android:gravity="center_vertical"
        android:hint="请输入手机账号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="14dp"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/registered_new_password"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setbar_white"
        android:gravity="center_vertical"
        android:hint="请输入新密码"
        android:maxLength="20"
        android:paddingLeft="14dp"
        android:inputType="textVisiblePassword"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/registered_news_password"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setbar_white"
        android:gravity="center_vertical"
        android:hint="再次输入新密码"
        android:maxLength="20"
        android:paddingLeft="14dp"
        android:inputType="textVisiblePassword"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setbar_white">

        <EditText
            android:id="@+id/registered_yzm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="14dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/get_yzm"
            android:layout_width="84dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:background="@drawable/setbar_zz"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#DB9370" />


    </RelativeLayout>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/login"
        android:text="立即修改"
        android:textColor="#FFFFEF"
        android:textSize="18sp" />


</LinearLayout>